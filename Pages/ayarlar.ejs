                        <script>
                            function validateInput(event) {
                                const inputValue = event.target.value;
                                const allowedCharacters = /[^\d.:abcdef]/g; // İzin verilen karakterler

                                const sanitizedValue = inputValue.replace(allowedCharacters, ''); // İzin verilen karakterleri korur

                                event.target.value = sanitizedValue; // İzin verilen karakterleri alan değerine geri yaz

                                // Opsiyonel olarak kullanıcıya uyarı verebilirsiniz:
                                if (inputValue !== sanitizedValue) {
                                    event.preventDefault();
                                }
                            }

                            function cancelAction() {
                                window.location.reload(); // Sayfayı yenile
                            }

                            function checkEmailValidity(event) {
                                const inputField = event.target;
                                let emailValue = inputField.value;

                                // Küçük harfe dönüştürme
                                emailValue = emailValue.toLowerCase();
                                inputField.value = emailValue;

                                // Geçerli e-posta kontrolü
                                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                                if (!emailRegex.test(emailValue)) {
                                    inputField.focus();
                                }
                            }

                            function checkIPValidity(event) {
                                const inputField = event.target;
                                let ipAddress = inputField.value;

                                // IP adresi formatını kontrol etmek için regex ifadeleri
                                const ipv4Regex = /^(?!0)(?:\d{1,3}\.){3}\d{1,3}$/;
                                const ipv6Regex = /^(?:[A-F0-9]{1,4}:){7}[A-F0-9]{1,4}$/i;

                                // Girilen IP adresini küçük harfe dönüştürme
                                ipAddress = ipAddress.toLowerCase();
                                inputField.value = ipAddress;

                                // Geçerli IP adresi kontrolü
                                if (!ipv4Regex.test(ipAddress) && !ipv6Regex.test(ipAddress)) {
                                    inputField.focus();
                                }
                            };

                            function showAlert(text = "Tanımlanmamış.", color = "4b38b3", duration = 3000) {
                                switch (color) {
                                    case "danger":
                                        color = "#f06548";
                                        break;
                                    case "success":
                                        color = "#45CB85";
                                        break;
                                    case "primary":
                                        color = "#4b38b3";
                                        break;
                                    case "info":
                                        color = "#3577f1";
                                        break;
                                    case "warning":
                                        color = "#ffbe0b";
                                        break;
                                }
                                Toastify({
                                    text,
                                    backgroundColor: color,
                                    duration,
                                    newWindow: true,
                                    close: true,
                                    gravity: "top",
                                    position: "right",
                                    stopOnFocus: true,
                                    onClick: function () { }
                                }).showToast();
                            };

                            function copyToClipboard(text) {
                                showAlert("2FA Secret kodu kopyalandı.", "success", 1500);

                                return navigator.clipboard.writeText(text);
                            };

                            function openRedeemCodeTab() {
    // URL'de redeemCode kısmı varsa
    if (window.location.hash) {
