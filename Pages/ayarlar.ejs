        var redeemCodeTab = document.querySelector(`a[href="${window.location.hash}"]`);
        if (redeemCodeTab) {
            redeemCodeTab.click();
            // Tıklama yapıldıktan sonra URL'den # ile sonrasını sil
            window.history.replaceState({}, document.title, window.location.pathname);
        }
    }
}

