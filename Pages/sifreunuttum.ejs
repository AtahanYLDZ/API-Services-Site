<head>

    <meta charset="utf-8" />
    <title>Perla API Services | Şifremi Unuttum</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- App favicon -->
    <link rel="shortcut icon" href="../assets/images/favicon.ico">

    <!-- Layout config Js -->
    <script src="../assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="../assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="../assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="../assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="../assets/css/custom.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div class="auth-page-wrapper pt-5">

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="index.html" class="d-inline-block auth-logo">
                                    <img src="../assets/images/logo-light.png" alt="" height="20">
                                </a>

                            </div>
                        </div>
                        <!-- end row -->

                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-6 col-xl-5">
                                <div class="card mt-4 card-bg-fill">

                                    <div class="card-body p-4">
                                        <div class="text-center mt-2">
                                            <h5 class="text-primary">Şifreni mi Unuttun?</h5>

                                            <lord-icon src="https://cdn.lordicon.com/rhvddzym.json" trigger="loop"
                                                colors="primary:#8c68cd" class="avatar-xl"></lord-icon>

                                        </div>

                                        <% if (typeof mesaj !=='undefined' ) { %>
                                            <div class="alert alert-<% if (success == true) { %>success<% } else { %>danger<% } %> alert-dismissible fade show"
                                                role="alert">
                                                <i
                                                    class="mdi mdi-<% if (success == true) { %>check<% } else { %>block-helper<% } %> me-2"></i>
                                                <strong>
                                                    <%= mesaj %>
                                                </strong>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                    aria-label="Close"></button>
                                            </div>
                                            <% } else if (typeof sifredegis==='undefined' && typeof factor ==='undefined') { %>
                                                <div class="alert alert-borderless alert-warning text-center mb-2 mx-2"
                                                    role="alert">
                                                    Siteye kayıtlı E-Posta adresinizi giriniz.
                                                </div>
                                                <% } %>
                                                    <div class="p-2">
                                                        <form class="needs-validation" novalidate action="/sifreunuttum"
                                                            method="POST">
                                                            <% if (typeof sifredegis==='undefined' && typeof
                                                                mesaj==='undefined' && typeof factor ==='undefined') { %>

                                                                <div class="mb-4">
                                                                    <label class="form-label">E-Mail</label>
                                                                    <input type="email" name="email"
                                                                        class="form-control" id="email"
                                                                        placeholder="E-Mail Giriniz." required>
                                                                </div>
                                                                <center>
                                                                    <div class="h-captcha"
                                                                        data-sitekey="35a778aa-46e1-438f-9ed8-405e3e2b96b9">
                                                                    </div>
                                                                </center>
                                                                <div class="text-center mt-4">
                                                                    <button class="btn btn-primary w-100"
                                                                        type="submit">Şifre
                                                                        sıfırlama bağlantısı gönder.</button>
                                                                </div>
                                                                <% } else if (typeof factor !=='undefined' ) { %>
                                                                    <div class="mb-3">
                                                                        <label for="factor" id="factor"
                                                                            class="form-label">2FA Kodu</label>
                                                                        <input type="text" class="form-control"
                                                                            name="factor" placeholder="2FA kod giriniz."
                                                                            minlength="6" maxlength="6" required="true">
                                                                    </div>
                                                                    <div class="text-center mt-4">
                                                                        <button class="btn btn-primary w-100"
                                                                            type="submit">Şifre
                                                                            sıfırlama bağlantısı gönder.</button>
                                                                    </div>
                                                                <% } else if (typeof sifredegis!=='undefined' ) { %>

                                                                    <div class="mb-3">
                                                                        <label class="form-label"
                                                                            for="password-input">Şifre</label>
                                                                        <div
                                                                            class="position-relative auth-pass-inputgroup">
                                                                            <input type="password" name="password"
                                                                                class="form-control pe-5 password-input"
                                                                                onpaste="return false"
                                                                                placeholder="Şifre belirle"
                                                                                id="password-input"
                                                                                aria-describedby="passwordInput"
                                                                                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                                                                required>
                                                                            <button
                                                                                class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon"
                                                                                type="button" id="password-addon"><i
                                                                                    class="ri-eye-fill align-middle"></i></button>
                                                                            <div class="invalid-feedback">
                                                                                Lütfen şifre belirleyiniz
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <div id="password-contain"
                                                                        class="p-3 bg-light mb-2 rounded">
                                                                        <h5 class="fs-13">Şifre gereksinimleri</h5>
                                                                        <p id="pass-length" class="invalid fs-12 mb-2">
                                                                            Minimum
                                                                            <b>8 karakter giriniz</b>
                                                                        </p>
                                                                        <p id="pass-lower" class="invalid fs-12 mb-2">En
                                                                            az 1
                                                                            <b>küçük</b> harf giriniz (a-z)
                                                                        </p>
                                                                        <p id="pass-upper" class="invalid fs-12 mb-2">En
                                                                            az 1
                                                                            <b>büyük</b> harf giriniz (A-Z)
                                                                        </p>
                                                                        <p id="pass-number" class="invalid fs-12 mb-0">
                                                                            En az 1
                                                                            <b>sayı</b> giriniz (0-9)
                                                                        </p>
                                                                    </div>

                                                                    <div class="mt-4">
                                                                        <button class="btn btn-primary w-100"
                                                                            type="submit">Sifre Değistir</button>
                                                                    </div>
                                                                    <% } %>
                                                        </form><!-- end form -->
                                                    </div>
                                    </div>
                                    <!-- end card body -->
                                </div>


                                <div class="mt-4 text-center">
                                    <p class="mb-0">Şifreni hatırladın mı? <a href="/giris"
                                            class="fw-semibold text-primary text-decoration-underline"> Giriş için tıkla
                                        </a> </p>
                                </div>

                            </div>
                        </div>
                        <!-- end row -->
                    </div>
                    <!-- end container -->
                </div>
                <!-- end auth page content -->

            </div>
            <!-- end auth-page-wrapper -->

            <!-- JAVASCRIPT -->
            <script src="https://hcaptcha.com/1/api.js?hl=tr" async defer></script>
            <script src="../assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="../assets/libs/simplebar/simplebar.min.js"></script>
            <script src="../assets/libs/node-waves/waves.min.js"></script>
            <script src="../assets/libs/feather-icons/feather.min.js"></script>
            <script src="../assets/js/pages/plugins/lord-icon-2.1.0.js"></script>

            <!-- particles js -->
            <script src="../assets/libs/particles.js/particles.js"></script>

            <!-- particles js -->
            <script src="../assets/libs/particles.js/particles.js"></script>
            <!-- particles app js -->
            <script src="../assets/js/pages/particles.app.js"></script>
            <!-- validation init -->
            <script src="../assets/js/pages/form-validation.init.js"></script>
            <!-- password create init -->
            <script src="../assets/js/pages/passowrd-create.init.js"></script>
</body>


