<body>

    <div class="auth-page-wrapper pt-5">

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="/anasayfa" class="d-inline-block auth-logo">
                                    <img src="../assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                        </div>
                        <!-- end row -->
                        <script>
                            function checkInput(event) {
                                const inputField = event.target;
                                let inputValue = inputField.value;

                                inputValue = inputValue.toLowerCase();
                                inputField.value = inputValue;

                                const regex = /^[a-z]+$/;
                                if (!regex.test(inputValue)) {
                                    inputField.value = '';
                                }
                            }

                            function checkEmailValidity(event) {
                                const inputField = event.target;
                                let emailValue = inputField.value;

                                // Küçük harfe dönüştürme
                                emailValue = emailValue.toLowerCase();
                                inputField.value = emailValue;

                                // Geçerli e-posta kontrolü
                                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                                if (!emailRegex.test(emailValue)) {
                                    inputField.focus();
                                }
                            }

                            function convertToLower(event) {
                                const inputField = event.target;
                                let inputValue = inputField.value;

                                // Küçük harfe dönüştürme
                                inputValue = inputValue.toLowerCase();
                                inputField.value = inputValue;
                            }
                        </script>

                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-6 col-xl-5">
                                <div class="card mt-4 card-bg-fill">

                                    <div class="card-body p-4">
                                        <div class="text-center mt-2">
                                            <h5 class="text-primary">P E R L A Servis</h5>
                                        </div>
                                        <div class="p-2 mt-4">
                                            <% if (typeof mesaj=='undefined' ) { %>
                                                <% } else if (mesaj) { %>
                                                    <div class="alert alert-danger alert-dismissible fade show"
                                                        role="alert">
                                                        <i class="mdi mdi-block-helper me-2"></i>
                                                        <strong>
                                                            <%= mesaj %>
                                                        </strong>
                                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <% } %>
                                                        <form class="needs-validation" novalidate action="/kayit"
                                                            method="POST">
                                                            <% if (typeof mailverification==='undefined' ) { %>
                                                                <% } else { %>
                                                                    <div class="alert alert-success alert-dismissible fade show"
                                                                        role="alert">
                                                                        <i class="mdi mdi-check me-2"></i>
                                                                        <strong>Girdiğiniz E-Mail adresinize doğrulama
                                                                            linki gönderildi doğrulamayı yaptığınız
                                                                            zaman hesabınız aktif edilecektir.</strong>
                                                                        <button type="button" class="btn-close"
                                                                            data-bs-dismiss="alert"
                                                                            aria-label="Close"></button>
                                                                    </div>
                                                                    <% } %>
                                                        </form>
                                                        <div class="mt-4">
                                                            <a href="/giris" class="btn btn-success"><i class="mdi mdi-home me-1"></i>BANA BAS TOTOS</a>
                                                        </div>
                                        </div>
                                    </div>
                                    <!-- end card body -->
                                </div>
                                <!-- end card -->



                            </div>
                        </div>
                        <!-- end row -->
                    </div>
                    <!-- end container -->
                </div>
                <!-- end auth page content -->

                <!-- footer -->
                <footer class="footer">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="text-center">
                                    <p class="mb-0 text-muted">&copy;
                                        <script>document.write(new Date().getFullYear())</script> P E R L A <i
                                            class="mdi mdi-heart text-danger"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- end Footer -->
            </div>
